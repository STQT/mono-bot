# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
DB_NAME=mona_db
DB_USER=mona_user
DB_PASSWORD=mona_password
DB_HOST=db
DB_PORT=5432

# MongoDB (для будущего расширения)
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=mona_mongodb

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Media Files
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# Webhook Settings (для production)
WEBHOOK_URL=https://yourdomain.com
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8443

# Web App URL (для тестирования через ngrok или production)
WEB_APP_URL=

# Telegram Bot Username (без @)
TELEGRAM_BOT_USERNAME=
TELEGRAM_BOT_ADMIN_USERNAME=

# Django Settings Module (local для разработки, production для продакшна)
DJANGO_SETTINGS_MODULE=mona.settings.local

# Sentry Error Tracking (оставьте пустым чтобы отключить)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=production
